@model IEnumerable<Hotels302.Models.Hotel>

@{
    ViewBag.Title = "Oteller";
}

<h2>Otel Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kayıt", "Create", null, new { @class = "btn red btn-outline" })
    
</p>
<table class="table table-striped tab-hover" id="tblRecords">
    <thead>
        <tr>
            <th class="text-nowrap all">
                İl
            </th>
            <th class="text-nowrap">
                İlçe
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Explanation)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.RoomCapacity)
            </th>
            @*<th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>*@
            <th data-orderable="false" class="all">Eylemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Town.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Explanation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomCapacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Ayrıntılar", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
